@model Inmobiliaria.Models.Usuario

@{
    ViewData["Title"] = "Eliminar Usuario";
    var Usuario = Model;
}

<div id="contenedor-vista-previa" class="table-responsive d-flex justify-content-center align-items-center">
    <table class="table table-bordered table-striped w-auto">
        <tr>
            <th class="col" colspan="2">
                <h2><a asp-action="Index"><i class="bi bi-arrow-return-left"
                            style="font-size: 1em; color: black;">Regresar</i></a></h2>
                <h2><a href="@Url.Action("Edit", new { id = Usuario.IdUsuario  })"> <i class="bi bi-pencil-square"
                            style="font-size: 1em; color: green;">Editar</i> </a></h2>
            </th>
        </tr>
        <tr>
            <td class="col-sm-4 fila-nombre">
                @Html.DisplayNameFor(model => model.Avatar)
            </td>
            <td class="col-sm-8">
                @if (Model.Avatar != "")
                {
                    <img src="@Model.Avatar" alt="Avatar" style="width: 45px; heigh:45px;"
                        class="img-thumbnail rounded-circle">
                }
                else
                {
                    <img src="/img/default.webp" alt="Avatar" style="width: 45px; heigh:45px;"
                        class="img-thumbnail rounded-circle">
                }
            </td>
        </tr>
        <tr>
            <td class="col-sm-4 fila-nombre">
                @Html.DisplayNameFor(model => model.IdUsuario)
            </td>
            <td class="col-sm-8">
                @Html.DisplayFor(model => model.IdUsuario)
            </td>
        </tr>
        <tr>
            <td class="col-sm-4 fila-nombre">
                @Html.DisplayNameFor(model => model.Nombre)
            </td>
            <td class="col-sm-8">
                @Html.DisplayFor(model => model.Nombre)
            </td>
        </tr>
        <tr>
            <td class="col-sm-4 fila-nombre">
                @Html.DisplayNameFor(model => model.Apellido)
            </td>
            <td class="col-sm-8">
                @Html.DisplayFor(model => model.Apellido)
            </td>
        </tr>
        <tr>
            <td class="col-sm-4 fila-nombre">
                @Html.DisplayNameFor(model => model.Email)
            </td>
            <td class="col-sm-8">
                @Html.DisplayFor(model => model.Email)
            </td>
        </tr>
        <tr>
            <td class="col-sm-4 fila-nombre">
                @Html.DisplayNameFor(model => model.Dni)
            </td>
            <td class="col-sm-8">
                @Html.DisplayFor(model => model.Dni)
            </td>
        <tr>
            <td class="col-sm-4 fila-nombre">
                @Html.DisplayNameFor(model => model.Telefono)
            </td>
            <td class="col-sm-8">
                @Html.DisplayFor(model => model.Telefono)
            </td>
        <tr>
            <td class="col-sm-4 fila-nombre">
                @Html.DisplayNameFor(model => model.Rol)
            </td>
            <td class="col-sm-8">
                @Html.DisplayFor(model => model.RolNombre)
            </td>
        </tr>

        <tr>
            <td colspan="2">
                <h2 id="eliminar-mensaje">Estas seguro de que deseas eliminar este elemento?</h2>
                <form asp-action="Delete">
                    <input id="boton-general" type="submit" value="Delete" class="btn btn-info btn-block" />
                </form>
            </td>
        </tr>

    </table>
</div>