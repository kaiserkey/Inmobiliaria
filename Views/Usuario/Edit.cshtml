@model Inmobiliaria.Models.Usuario

@{
    ViewData["Title"] = "Editar Usuario";
}

<div id="nuevo-container" class="container d-flex justify-content-center align-items-center">
    <div class="row">
        <div class="col-md-12">
            <form asp-action="Edit" method="POST" class="text-center border border-light p-5" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <a asp-action="Index">
                    <i class="bi bi-arrow-return-left" style="font-size: 2em; color: black;"></i>
                </a>
                <p class="h3 mb-4">Editar Usuario</p>
                <div class="form-group">
                    <div class="custom-file">
                        <input asp-for="AvatarFile" type="file" id="formFile" accept="image/jpeg, image/png, image/gif"
                            onchange="mostrarImagenSeleccionada(event)" class="custom-file-input"
                            data-browse="Seleccionar archivo">
                        <label asp-for="AvatarFile" class="custom-file-label" for="formFile">Seleccionar imagen</label>
                        <div class="input-group-append">
                            <button class="btn btn-outline-secondary" type="button"
                                onclick="document.getElementById('formFile').click()">
                                <i class="bi bi-upload" style="font-size: 1.5em; color: brown;"></i>
                            </button>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div id="vista-previa">
                        <img id="imagen-previa" src="@Model.Avatar" style="max-width: 100%; max-height: 200px;" />
                    </div>
                </div>
                <div class="form-group">
                    <input type="hidden" asp-for="IdUsuario" class="form-control" />
                    <span asp-validation-for="IdUsuario" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Nombre" class="control-label"></label>
                    <input asp-for="Nombre" class="form-control" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Apellido" class="control-label"></label>
                    <input asp-for="Apellido" class="form-control" />
                    <span asp-validation-for="Apellido" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Clave" class="control-label"></label>
                    <input asp-for="Clave" class="form-control" />
                    <span asp-validation-for="Clave" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Dni" class="control-label"></label>
                    <input asp-for="Dni" class="form-control" />
                    <span asp-validation-for="Dni" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Telefono" class="control-label"></label>
                    <input asp-for="Telefono" class="form-control" />
                    <span asp-validation-for="Telefono" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Rol" class="control-label"></label>
                    <select name="Rol" class="form-control">
                        @foreach (var item in (IDictionary<int, string>)ViewBag.Roles)
                        {
                            <option value="@item.Key">@item.Value</option>
                        }
                    </select>
                    <span asp-validation-for="Rol" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input id="boton-general" type="submit" value="Guardar" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

