@model IEnumerable<Inmobiliaria.Models.Usuario>

@{
    ViewData["Title"] = "Administracion de Usuarios";
}

<div class="col-md-12 text-center">
    <h1>Usuarios</h1>
    <h2><a asp-action="Create"> <i class="bi bi-plus-square-fill" style="font-size: 1em; color: black;"> Nuevo Usuario
            </i> </a></h2>
</div>
<div class="table-responsive d-flex justify-content-center align-items-center">
    <table class="table table-bordered table-striped w-auto">
        <thead id="thead-color">
            <tr>
                <th class="col">
                    @Html.DisplayNameFor(model => model.Avatar)
                </th>
                <th class="col">
                    @Html.DisplayNameFor(model => model.Nombre)
                </th>
                <th class="col">
                    @Html.DisplayNameFor(model => model.Apellido)
                </th>
                <th class="col email">
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th class="col">
                    @Html.DisplayNameFor(model => model.Dni)
                </th>
                <th class="col">
                    @Html.DisplayNameFor(model => model.Telefono)
                </th>
                <th class="col">
                    @Html.DisplayNameFor(model => model.RolNombre)
                </th>
                <th colspan="3"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr scope="row">
                    <td>
                        @if(item.Avatar!=""){
                            <img src="@Html.DisplayFor(modelItem => item.Avatar)" alt="Avatar" style="width: 45px; heigh:45px;" class="img-thumbnail rounded-circle"> 
                        }else{
                            <img src="/img/default.webp" alt="Avatar" style="width: 45px; heigh:45px;" class="img-thumbnail rounded-circle">
                        }
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Apellido)
                    </td>
                    <td class="email">
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Dni)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Telefono)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RolNombre)
                    </td>

                    <td>
                        <a href="@Url.Action("Edit", new { id = item.IdUsuario })"> <i class="bi bi-pencil-square"
                                style="font-size: 2em; color: green;"></i> </a>
                    </td>
                    <td>
                        <a href="@Url.Action("Details", new { id = item.IdUsuario })"> <i class="bi bi-file-text-fill"
                                style="font-size: 2em; color: orange;"></i> </a>
                    </td>
                    <td>
                        <a href="@Url.Action("Delete", new { id = item.IdUsuario })"> <i class="bi bi-trash3-fill"
                                    style="font-size: 2em; color: red;"></i> </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
